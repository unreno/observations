<h1>Total Vaccination Counts for all children born in 2015</h1>

<table>
<thead>
	<tr>
		<th>Vaccination</th>
		<th>Count</th>
	</tr>
</thead>
<tbody>
<% @results.each do |result| %>
	<tr>
		<td><%= result.vaccination %></td>
		<td><%= result.count %></td>
	</tr>
<% end %>
</tbody>
</table>

<div id='chart' class='chart'>
<!-- /the chart goes here -->
</div>

<p><%= @sql %></p>

<script type="text/javascript">
//<![CDATA[

var data = [{
	type: 'bar',
	orientation: 'h',
	x: <%=@results.reverse.collect{|r| r.count }%>,
	y: [<%=@results.reverse.collect{|r|"\"#{r.vaccination}\""}.join(",").html_safe%>]
}];

var layout = {
	title: 'Total Vaccinations for those born in 2015',
	xaxis: {
		title: 'Count'
	},
	yaxis: {
		title: 'Vaccination'
	},
	margin: {
		l: 200,
	}
};

Plotly.newPlot('chart', data, layout);

//]]>

</script>
